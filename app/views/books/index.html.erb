<body>
  <%= render '/loginheader' %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<main>
    <%= render '/rightsideber', user: @user, books: @book %>


  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% @books2.each do |book| %>
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg'%>
            <!--<a href="/users/5467">-->
            <!--<img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg">-->
          <% end %>
          </a>
        </td>

        <td>
          <%= link_to book_path(book.id) do %>
           <p><%= book.title %></p>
          <!--<a class="book_5072" href="/books/5072">リーダブルコード</a>-->
          <% end %>
        </td>
        <td>
           <p><%= book.body %></p>
          <!--より良いコードを書くためのシンプルで実践的なテクニック。-->
        </td>
      </tr>

  </tbody>
  <% end %>
</table>
    </div>
  </div>
</div>
</main>

<%= render '/footer' %>



</body>