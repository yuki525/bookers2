<% if @range == "User" %>
<h1>ユーザー検索結果</h1>
<p><%=  params[:word]  %>　検索</p>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.png", size: '50x50' %>
        </td>
        <td>
          <%= link_to user_path(user) do %>
          <%= user.name %>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>


    <% else %>
    <h1>本タイトル検索結果</h1>
    <p><%=  params[:word]  %>　検索</p>
     <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg'%>
              <!--<a href="/users/5467">-->
              <!--<img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg">-->
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
             <p><%= book.title %></p>
            <!--<a class="book_5072" href="/books/5072">リーダブルコード</a>-->
            <% end %>
          </td>
          <td>
            <p><%= book.body %></p>
          <!--より良いコードを書くためのシンプルで実践的なテクニック。-->
          </td>
           </tr>
      </tbody>
      <% end %>
    </table>
    <% end %>